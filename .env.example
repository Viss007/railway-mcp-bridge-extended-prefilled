# === Required tokens (fill in as needed) ===
# Discord Bot token (Bot must be in your server)
DISCORD_BOT_TOKEN=
# GitHub PAT with read:user (and repo if you add write tools)
GITHUB_TOKEN=
# Railway account token (https://railway.app/account/tokens)
RAILWAY_TOKEN=
# Docker Hub username + Access Token (Personal Access Token)
DOCKERHEB_USERNAME= 
DOCKERHEB_TOKEN=
# Google AI Studio / Gemini API key
GEMINI_API_KEY=
# Anthropic Claude API key
ANTHROPIC_API_KEY=

# ==== Docker Engine (TLS) ====
# Example: https://docker.example.com:2376
DOCKER_HOST=
# TLS settings (set DOCKER_TLS= true to enable and provide base64-encoded certs)
DOCKER_TLS=false
DOCKER_TLS_CA_B64=
DOCKER_TLS_CERT_B64=
DOCKER_TLS_KEY_B64=

# ==== Global options ====
# 'true' to allow write actions like discord.sendMessage or dockerengine.runContainer. Defaults to false.
ALLOW_WRITES=false
# Port (Railway will inject PORT automatically)
PORT=3000
# Convenience defaults (optional)
DISCORD_DEFAULT_CHANNEL_ID=
RAILWAY_DEPLOY_HOOK_URL=
